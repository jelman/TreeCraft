{
  "name": "treecraft",
  "private": true,
  "version": "0.1.0",
  "description": "A modern web-based application for creating, editing, and visualizing folder structures with drag-and-drop functionality",
  "author": "TreeCraft Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jelman/treecraft.git"
  },
  "bugs": {
    "url": "https://github.com/jelman/treecraft/issues"
  },
  "homepage": "https://jelman.github.io/treecraft",
  "keywords": [
    "folder-structure",
    "tree",
    "drag-drop",
    "visualization",
    "markdown",
    "ascii",
    "directory",
    "file-structure",
    "organization"
  ],
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 100",
    "preview": "vite preview",
    "serve": "vite preview --host",
    "start": "npm run dev",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "@monaco-editor/react": "^4.6.0",
    "lucide-react": "^0.298.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.treecraft.app",
    "productName": "TreeCraft",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "public/electron.js",
      "public/preload.js"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "public/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.png",
      "category": "Development",
      "desktop": {
        "Name": "TreeCraft",
        "Comment": "Create and edit folder structures visually",
        "Keywords": "folder;structure;tree;editor;development;"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
